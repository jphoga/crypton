<h2 class="text-center"></h2>
<div class="follow-container">
  <% @user.user_followers.each do |follower| %>
    <%= link_to user_path(@user) do %>
      <div class="follow-profile-card">
        <%= cl_image_tag(follower.photo, :transformation=>[
        {:effect=>"cartoonify"},
        {:effect=>"outline:100", :color=>"white"},
        {:background=>"white"},
        {:width=>50, :height=>50, :radius=>"max", :crop=>"scale"}
        ], class: 'follow-avatar') %>
        <div class="follow-info">
          <div class="follow-username">
            <%= follower.username %>
          </div>
          <div class="follow-email">
            <%= follower.email %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>